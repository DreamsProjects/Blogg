@model EmmasBlogg.Models.Inlägg


@{
    ViewData["Title"] = "Create";
}


<h2>Skapa inlägg</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InläggsID" />
            <div class="form-group">
                <label asp-for="Titel" class="control-label"></label>
                <input asp-for="Titel" class="form-control" maxlength="50" placeholder="Titel...*" onkeyup="countTitel(this)" />
                <span asp-validation-for="Titel" class="text-danger"></span>
                <div id="charTit"></div>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" maxlength="2000" type="text" id="text" onkeyup="countChar(this)" />
                <span asp-validation-for="Text" class="text-danger"></span>
                <div id="charNum"></div>
            </div>
            @Html.DropDownListFor(model => model.KategoriId, ViewBag.Kategori as SelectList)
            @Html.HiddenFor(model => model.KategoriId)

            <input type="submit" value="Spara" class="btn btn-default" /> |
            <a asp-action="Index">Tillbaka till menyn</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
